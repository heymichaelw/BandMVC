
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Band"))
{
    <p>
        @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Name" })
    </p>

    <p>
        @Html.TextBox("Formed", null, new { @class = "form-control", placeholder = "Date Formed" })
    </p>

    <p>
        <input type="submit" class="btn btn-default" value="Create Band" />
    </p>
}

