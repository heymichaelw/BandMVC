@model IEnumerable<BandMVC.Models.Band>

@{
    ViewBag.PageTitle = "Home Page";
}

<h2>Bands</h2>

@Html.ActionLink("Create New Band", "Create")
@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("bandsearch", null, new { @class = "form-control" })
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Formed)
        </th>
        <th></th>
    </tr>




    @foreach (var band in ViewBag.AllBands)
            {
        <tr>
            <td>
                @band.BandName
            </td>
            <td>
                @band.Formed
            </td>
            <td>
                @Html.ActionLink("All Albums", "Details", new { id = band.Id } )
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = band.Id })
            </td>
        </tr>
    }

    </table>


